<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>FtpBrowser</display-name>
  <servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>it.unibz.util.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
        <servlet-name>FtpConnectionsServlet</servlet-name>
        <servlet-class>it.unibz.util.FtpConnectionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
        <servlet-name>FtpConnectionsServlet</servlet-name>
        <url-pattern>/FtpConnectionsServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
        <param-name>filesDir</param-name>
        <param-value>/temp/</param-value>
    </context-param>
    <session-config> <session-timeout>30</session-timeout> </session-config> 
</web-app>